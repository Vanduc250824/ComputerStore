@model Computer_Store.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Xoá sản phẩm</h3>
        </div>
        <div class="card-body">
            <p class="text-danger">Bạn có chắc chắn muốn xoá sản phẩm này</p>

            <div class="row">
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail" style="max-width: 200px;" />
                    }
                    else
                    {
                        <p class="text-muted">Không có ảnh</p>
                    }
                </div>
                <div class="col-md-8">
                    <table class="table table-bordered">
                        <tbody class="table table-bordered">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <td>@Html.DisplayFor(model => model.Name)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Price)</th>
                                <td>@Html.DisplayFor(model => model.Price)$</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.StockQuantity)</th>
                                <td>@Html.DisplayFor(model => model.StockQuantity)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Description)</th>
                                <td>@Html.DisplayFor(model => model.Description)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Category.Name)</th>
                                <td>@Html.DisplayFor(model => model.Category.Name)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="mt-3">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Xóa
                    </button>
                    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>