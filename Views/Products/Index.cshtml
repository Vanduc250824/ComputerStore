@model IEnumerable<Computer_Store.Models.Product>

@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center text-primary fw-bold">Danh Sách Sản Phẩm</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <p class="fw-bold text-secondary">Tổng số sản phẩm: @Model.Count()</p>
        @Html.ActionLink("Thêm Sản Phẩm", "Create", null, new { @class = "btn btn-info fw-bold px-4" })
    </div>

    <table class="table table-bordered table-hover shadow-lg bg-white rounded">
        <thead class="table-info text-center">
            <tr>
                <th>#</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Mô tả</th>
                <th>Hình ảnh</th>
                <th>Danh mục</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody class="text-center align-middle">
            @{ int stt = 1; }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@stt</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price) $</td>
                    <td>@Html.DisplayFor(modelItem => item.StockQuantity)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>
                        <img src="@Url.Content(item.ImageUrl)" width="80" height="80" class="rounded border border-secondary" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                    <td>
                        <div class="btn-group">
                            @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }, new { @class = "btn btn-info mx-2" })    
                            @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "btn btn-warning" })
                        </div>
                    </td>
                </tr>
                stt++;
            }
        </tbody>
    </table>
</div>
    